<!doctype html>
<html>
  <head>
    <title>Login</title>
  </head>
  <body>
    <h1>Login</h1>

    <% if (error) { %>
      <p style="color:rgb(224, 65, 65);"><%= error %></p>
    <% } %>

    <form action="/users/loggedin" method="post">
      <p>Username: <input name="username" required></p>
      <p>Password: <input type="password" name="password" required></p>
      <button type="submit">Login</button>
    </form>

    <p><a href="/">Back</a></p>
  </body>
</html>
